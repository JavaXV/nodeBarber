
 <link rel="stylesheet" href="/stylesheets/css/bootstrap.min.css">
 <!-- Site CSS -->
 

<form method="post">
    <br><br>
    <div class="row" >
        <div class="col-md-8 offset-md-2" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; border-bottom-color: lightcoral; font-size: 11px; color:#0099FF; border-color: lightpink; padding: 10px; background-color:snow;">
            <div class="contact_form">
                <div id="message"></div>
                <form id="contactform" class="" action="" name="contactform" method="post">
                    <fieldset class="row row-fluid">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <input type="hidden" name="id"  class="form-control" value="<%= book.id%>">
                        </div>
                        
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <input type="text" name="fullname"  class="form-control" value="<%= book.fullname %>">
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <input type="text" name="company"  class="form-control" value="<%= book.company%>">
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <input type="email" name="email"  class="form-control" value="<%= book.email%>">
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <input type="text" name="phone"  class="form-control" value="<%= book.phone%>">
                        </div>   
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <input type="text" name="date"  class="form-control" value="<%= book.date%>">
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <select  class="form-control" name="lenght" style=" font-family:Courier , 'Times New Roman', Times, serif; ">
                                
                                <option value=""><%= book.lenght%></option>
                                <option value="Monday">Monday</option>
                                <option value="Tuesday">Tuesday</option>
                                <option value="Wednesday">Wednesday</option>
                                <option value="Thursday">Thursday</option>
                                <option value="Friday">Friday</option>
                                <option value="Saturday">Saturday</option>
                                <option value="Sunday">Sunday</option>
                            </select>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <textarea class="form-control" name="comment" style=" font-family:Courier, 'Times New Roman', Times, serif; " name="comments" id="comments" rows="6" >"<%= book.comment %>"</textarea>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12"></div>
                        <div class="form-btn text-center">
                        <button class="form-control">Update Appointment</button>
                            <br>
                            Call-Line to cancell Appointment +2349035066876
                        </div>
                        </fieldset>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div><!-- end col -->
    </div><!-- end row -->
</form>