<script src="/js/jquery.min.js"></script>
<script src="/js/tether.min.js"></script>
<script src="/js/bootstrap.min.js"></script>

<nav class = "navbar navbar-dark bg-primary" style="background-color: chocolate; height: 100px; width: 100%; padding-top: 0px;">
     <span class="navbar-brand" style="color:cornsilk; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      font-size: 20px; position:absolute; padding: 40px;"><%= pageTitle %></span>
</nav><br><br>
<form action="http://localhost:4000/event/add" method="POST" class="col s12">
    <input type="hidden" name="e_id" value="">
    <div class="form-group row">
        <label for="e_name" class="col-2 col-form-label">Name</label>
        <div class="col-10">
        <input type="text" name="e_name" value="" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label for="e_start_date class="col-2 col-form-label">Start Date</label>
        <div class="col-10">
        <input type="date" name="e_start_date" value="" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label for="e_end_date" class="col-2 col-form-label">End Date</label>
        <div class="col-10">
        <input type="date" name="e_end_date" value="" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label for="e_Desc" class="col-2 col-form-label">Description</label>
        <div class="col-10">
        <textarea name="e_desc" id="e_desc" cols="30" rows="4" class="form-control"></textarea>
        </div>
    </div>

    <div class="form-group row">
        <label for="e_location" class="col-2 col-form-label">Location</label>
        <div class="col-10">
        <textarea name="e_location" id="e_location" cols="30" rows="4" class="form-control"></textarea>
        </div>
    </div>

    <div class="form-group row">
        <label for="e_location" class="col-2 col-form-label" style="color: crimson;">Click here to submit</label>
        <div class="col-10">
        <input type="submit" name="submit" value="Save Event" class="btb btn-primary btn-lg">
        </div>
    </div>
    
</form>